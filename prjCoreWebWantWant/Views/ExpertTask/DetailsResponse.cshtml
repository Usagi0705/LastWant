@model prjCoreWebWantWant.Models.TaskList
@{
    ViewData["Title"] = "DetailsResponse";
    Layout = "~/Views/Member/LayoutForMem.cshtml";
}

<div class="container">
    <h1 class="my-3">收到的委託</h1>
    <div class="mx-auto">
        
        <div class="mx-auto w-70 p-5">
            <div class="mb-3 form-control-lg">
                委託者:
            </div>

            <hr>
            <div class="mb-3 form-control-lg ">
                委託內容:
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" readonly id="TaskTextarea" style="height: 400px"></textarea>

            </div>
            <!--委託時間-->
            <div class=" border mb-3">
                <div class="form-control-lg">
                    委託時間:
                </div>

                <div class="mb-3 row p-3">
                    <div class="form-floating col-5 p-3">
                        <input type="text" readonly class="form-control list" id="floatingPtimeone"
                               placeholder="委託截止日">

                    </div>
                    <div class="col-1 p-3 mx-auto">
                        ~
                    </div>
                    <div class="form-floating col-5 p-3">

                        <input type="text" readonly class="form-control list" id="floatingPtimeone"
                               placeholder="委託截止日">
                    </div>
                </div>
            </div>
            <!--委託時間結束-->
            <!--委託預算-->
            <div class=" border mb-3">
                <div class="form-control-lg ">
                    委託預算:
                </div>
                <div class="form-floating col-12 p-3 ">

                    <input type="text" readonly class="form-control list">
                </div>
            </div>
            <!--委託預算結束-->
            <!--委託地點-->

            <div class="border p-3  mb-3">
                <div class="form-control-lg">
                    委託工作地點:
                </div>
                <div class="mb-3 row p-3">
                    <div class="form-floating col-12 p-3">
                        <input type="text" readonly class="form-control list">

                    </div>
                    <div class="form-control-lg">
                        指定工作地址:
                    </div>
                    <div class="form-floating col-12 p-3">

                        <input type="text" readonly class="form-control list">
                    </div>
                </div>



            </div>
            <!--委託地點END-->
            <!--委託付款-->
            <div class="border p-3 mb-3">
                <div class="form-control-lg">
                    委託付款方式:
                </div>
                <div class="form-floating col-12 p-3 ">

                    <input type="text" readonly class="form-control list">
                </div>
            </div>
            <!--委託付款END-->

            <div class="row">

                <div class="form-floating col-3 mx-auto p-3">
                    <input type="submit" value="與委託者再討論" class="btn btn-outline-secondary" id="submit"
                           placeholder="Password" onclick="clickdeployone(response)">

                </div>
                <div class="form-floating col-3 mx-auto p-3">
                    <input type="submit" value="接受委託" class="btn btn-outline-secondary" id="nonsubmit"
                           placeholder="Password">

                </div>
                <div class="form-floating col-3 mx-auto p-3">
                    <input type="submit" value="拒絕委託" class="btn btn-outline-secondary" id="submit"
                           placeholder="Password">

                </div>
                <div class="mb-3 dropdown-header">
                    <li>提醒您，若對收到的委託內容有問題，請不要直接接受委託，善用聊天室或討論回應。
                </div>

            </div>
            <div class="border border-warning p-3 mb-3 border-4 bg-body-secondary" id="response" style="display: none;">


                <div class="mb-3 ">
                    <div class="form-floating">
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="TaskTextarea"
                                      style="height: 400px; width: 100%;"></textarea>

                        </div>
                    </div>

                    <div class="form-floating col-3 mx-auto p-3 ">
                        <input type="submit" value="回應委託者" class="btn btn-outline-secondary bg-white" id="submit"
                               placeholder="Password">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{

    <link type="text/css" rel="stylesheet" href="~/Expert/css/expertstyle.css">
        }
@section Scripts{
    <script src="~/Expert/js/expert.js"></script>
    <script src="~/Expert/js/bootstrap.bundle.js"></script>
    <script src="~/Expert/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
