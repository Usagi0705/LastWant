<body>
    <!--== footer start ==-->
    <footer id="footer" class="pt-4 bg-color text-white" style="background-color:#e5edf6;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-2 footer-list" style="align-content:center">
                    <div style="display: flex; justify-content: center; align-items: center;">
                        <img src="~/Images/LOGO.png" class="img-fluid mb-3" alt="Logo">
                    </div>
                    <div style="color:#528EAF;text-align:center ; font-size:14px;">望旺有限公司</div>
                    <div style="display: flex; justify-content: center; align-items: center;"><a href="mailto:service@wantwant.com" class="a-email" style="color:#528EAF;">service@wantwant.com</a></div>
                </div>

                <div class="col-md-4 col-sm-2 footer-list mx-auto text-center" >
                    <h5 class="text-uppercase fw-bold" style="color:#528EAF">關於我們</h5>
                    <ul class="footer-menu py-3" style="color: #528EAF">
                        <li>
                            @Html.ActionLink("WantWant介紹", "Index", "Home", new { area = "" }, new { @class = "footer-a-link" , @style = "color: #528EAF;" })
                        </li>
                        @Html.ActionLink("客服專區", "Index", "Home", new { area = "" }, new { @class = "footer-a-link", @style = "color: #528EAF;"  })
                        <li>
                            @Html.ActionLink("平台規範", "Index", "Home", new { area = "" }, new { @class = "footer-a-link", @style = "color: #528EAF;"  })
                        </li>                     
