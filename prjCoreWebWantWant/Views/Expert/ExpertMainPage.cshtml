        function ChatElert(href) {
            const isLogin = @httpContext.Session.Keys.Contains(CDictionary.SK_LOGINED_USER).ToString().ToLower();

            if (!isLogin) {
                Swal.fire({
                    icon: 'warning',
                    title: '請先登入會員',
