        //星星評價
        function generateStars(score) {
            var starfill = '<i class="bi bi-star-fill lablestar"></i>';
            var starhelf = '<i class="bi bi-star-half lablestar" > </i>';
            var starnull = '<i class="bi bi-star "></i>';
            let arr = [];
            for (let i = 1; i <= 5; i++) {
                if (score >= i) {
                    arr.push(starfill);
                } else if (score > i - 1 && score < i) {
                    arr.push(starhelf);
                } else {
                    arr.push(starnull);
                }
            }
            return arr.join("");
