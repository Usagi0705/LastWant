@model IEnumerable<prjCoreWebWantWant.Models.Order>
@{
    var cases = ViewBag.Cases as Dictionary<int, string>;
    var resumes = ViewBag.Resumes as Dictionary<int, string>;
}
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutForBackstage.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">訂單列表</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">     
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="container mt-4">
        <div class="row align-items-center">

            <div class="col-md-2">
                <label for="productName">關鍵字搜尋：</label>
                <input class="form-control form-control-sm" type="text" id="productName">
            </div>
            <div class="col-md-4">
                <label for="createdDate">訂單日期：</label>
                <div class="d-flex align-items-center">
                    <input type="date" class="form-control">
                    <span class="mx-2">~</span>
                    <input type="date" class="form-control">
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <button type="button" class="btn btn-primary">查詢</button>
                <button type="button" class="btn btn btn-info">匯出訂單</button>
            </div>
            <div class="row mt-3 ">
                <div class="d-flex">
                    <button type="button" class="btn btn-outline-primary">訂單時間升冪</button>
                    <button type="button" class="btn btn-outline-primary">訂單時間降冪</button>
                    <button type="button" class="btn btn-primary">訂單分析圖表</button>
                </div>
            </div>

        </div>


        <table id="table" class="table table-striped mt-5">
            <thead align="center">
  
                <tr>
                    <td></td>
                    <td>訂單編號</td>
                    <td>訂單類別</td>
                    <td>加值項目</td>
                    <td>購買時間</td>
                    <td>顧客</td>
                    <td>付款狀態</td>
                    <td>總金額</td>


                </tr>
            </thead>
            <tbody align="center">
                           @foreach (var item in Model)
    {
                    var caseId = item.OrderDetails.FirstOrDefault()?.CaseId;
                    var resuemeId = item.OrderDetails.FirstOrDefault()?.ResumeId;
                <tr>
                    <td>
                            <a data-bs-toggle="collapse" data-bs-target="#orderDetails@(item.OrderId)" class="accordion-toggle">
                            <i class="bx bxs-show"></i>
                        </a>
                    </td>
                    <td>@item.OrderId</td>
                        <td>@item.Category.CategoryName</td>
                        <td>
                            @if (caseId != null && ViewBag.Cases.ContainsKey(caseId.Value))
                            {
                                var caseName = ViewBag.Cases[caseId.Value];
                                <span>@(caseName.Length > 10 ? caseName.Substring(0, 20) : caseName)...</span>
                            }
                            else if (resuemeId != null && ViewBag.Resumes.ContainsKey(resuemeId.Value))
                            {
                                var resuemeName = ViewBag.Resumes[resuemeId.Value];
                                <span>您的專業履歷@(resuemeName.Length > 10 ? resuemeName.Substring(0, 10) : resuemeName)</span>
                            }
                            else
                            {
                                <span>未知加值項目</span>
                            }
                        </td>
                    <td>@item.CreateTime</td>
                    <td>@item.Account.Name</td>
                    <td></td>
                    <td>@item.OrderPrice</td>
                </tr>
                <!-- 可展開/收起的內容 -->
                <tr>
                    <td colspan="8" class="hiddenRow">
                            <div class="collapse" id="orderDetails@(item.OrderId)" data-bs-parent="#table">
                            <!-- 在這裡填入訂單明細內容 -->
                                <table class="table table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>商品名稱</th>
                                        <th>數量</th>
                                        <th>單價</th>
                                        <th>小計</th>
                                           
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in item.OrderDetails)
                                    {
                                    <tr>
                                        <td>@detail.Product.ProductName</td>
                                        <td>@detail.Quantity</td>
                                        <td>@detail.UnitPrice</td>
                                        <td>@(detail.UnitPrice*detail.Quantity)</td>
                                      
                                    </tr>
                                        }
                                   
                                </tbody>
                        </table>
                        </div>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> <!-- /.content-wrapper -->

@section Styles
    {
    <!--box icons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        /* 將外層容器設置為相對定位 */
        .header-container {
            position: relative;
        }

        .bx.bxs-show {
            font-size: 1.5rem;
        }
    </style>
}