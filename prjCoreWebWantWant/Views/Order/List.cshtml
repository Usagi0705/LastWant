@*@model IEnumerable<prjCoreWebWantWant.Models.Order>*@
@model PagedList.PagedList<Order>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutForBackstage.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">訂單列表</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="container mt-4">
        <form id="searchForm" method="get" enctype="multipart/form-data">

            <div class="row align-items-center">

                <div class="col-md-2">
                    <label for="productName">會員名稱：</label>
                    <input class="form-control form-control-sm" type="text" id="name">
                </div>
                <div class="col-md-2">
                    <label for="productName">訂單編號：</label>
                    <input class="form-control form-control-sm" type="text" id="orderId">
                </div>
                <div class="col-md-2">
                    <label for="productName">訂單類別：</label>
                    <select name="category" id="category" class="form-control">
                        <option value="">請選擇</option>
                        <option value="1">專家曝光</option>
                        <option value="2">任務曝光</option>
                    </select>

                </div>
                <div class="col-md-4">
                    <label for="createdDate">訂單日期：</label>
                    <div class="d-flex align-items-center">
                        <input type="date" class="form-control" name="startDate" id="startDate">
                        <span class="mx-2">~</span>
                        <input type="date" class="form-control" name="endDate" id="endDate">
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary" id="searchButton">查詢</button>

                    <button type="button" class="btn btn btn-info" id="exportButton">匯出訂單</button>

                </div>

                <div class="row mt-3 ">
                    <div class="d-flex">
                        <button type="button" class="btn btn-outline-primary" onclick="sortTable(true)">訂單時間升冪</button>
                        <button type="button" class="btn btn-outline-primary" onclick="sortTable(false)">訂單時間降冪</button>
                        <a asp-action="ShoppingCharts" class="btn btn-primary">訂單分析圖表</a>
                    </div>

                </div>

            </div>
        </form>

        <table id="table" class="table table-striped mt-5">
            <thead align="center">

                <tr>
                    <th></th>
                    <th>訂單編號</th>
                    <th>訂單類別</th>
                    <th>案件</th>
                    <th>購買時間</th>
                    <th>會員</th>
                    <th>付款狀態</th>
                    <th>商品金額</th>
                    <th>使用紅利</th>
                    <th>訂單金額</th>


                </tr>
            </thead>
            <tbody align="center">
                @foreach (var order in Model)
                {

                    <tr>
                        <td>
                            <a data-bs-toggle="collapse" data-bs-target="#orderDetails@(order.OrderId)" class="accordion-toggle">
                                <i class="bx bxs-show"></i>
                            </a>
                        </td>
                        <td>@order.OrderId</td>
                        <td>@order.Category.CategoryName</td>
                        <td>
                            @if (order.OrderDetails.Any())
                            {
                                var firstOrderDetail = order.OrderDetails.First();
                                @if (firstOrderDetail.CaseId != null)
                                {
                                    <span>@firstOrderDetail.Case.TaskTitle</span>
                                }
                                else if (firstOrderDetail.ResumeId != null)
                                {
                                    <span>@firstOrderDetail.Resume.ResumeTitle</span>
                                }
                            }
                        </td>

                        <td>@order.CreateTime</td>
                        <td>@order.Account.Name</td>
                        <td></td>
                        <td>@order.OrderPrice</td>
                        <td>@order.OrderUsePoint</td>
                        <td>@order.PaidAmount</td>
                    </tr>
                    <!-- 可展開/收起的內容 -->
                    <tr>
                        <td colspan="12" class="hiddenRow">
                            <div class="collapse" id="orderDetails@(order.OrderId)" data-bs-parent="#table">
                                <!-- 在這裡填入訂單明細內容 -->
                                <table class="table table-bordered" id="table3">
                                    <thead class="table-dark">
                                        <tr>
                                            <th></th>
                                            <th>商品名稱</th>
                                            <th>數量</th>
                                            <th>單價</th>
                                            <th>小計</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <tr>
                                                <td><img src="@Url.Content("~/shopimg/")@detail.Product.CoverPhoto" width="60" height="60"/></td>
                                                <td>@detail.Product.ProductName</td>
                                                <td>@detail.Quantity</td>
                                                <td>@detail.UnitPrice</td>
                                                <td>@(detail.UnitPrice * detail.Quantity)</td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Url.Action("List", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("List", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Url.Action("List", new { page = Model.PageNumber + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>


</div> <!-- /.content-wrapper -->
@section Styles
    {
    <!--box icons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>

        /* 將外層容器設置為相對定位 */
        .header-container {
            position: relative;
        }

        .bx.bxs-show {
            font-size: 1.5rem;
        }
        #table td{
            text-align: center;
            vertical-align: middle
        }
    </style>
}
@section Scripts
    {
    <script>
        // 搜尋
        $(document).ready(function () {
            $('#searchForm').submit(function (e) {
                e.preventDefault();

                var category = $('#category').val();
                var startDate = $('#startDate').val();
                var endDate = $('#endDate').val();
                var orderId = $('#orderId').val();
                var name = $('#name').val();

                $.ajax({
                    url: '@Url.Action("List", "Order")',
                    type: 'GET',
                    data: {
                        categorys: category,
                        startDate: startDate,
                        endDate: endDate,
                        orderId: orderId,
                        name: name
                    },
                    success: function (result) {
                        $('#table tbody').html($(result).find('#table tbody').html());
                    },
                    error: function () {
                        alert('失敗。');
                    }
                });
            });
        });

        //匯出訂單
        document.getElementById('exportButton').addEventListener('click', function () {
            var rows = document.querySelectorAll('#table tbody tr:not(.hiddenRow)'); // Exclude detail rows
            var data = [['訂單編號', '訂單類別', '加值項目', '購買時間', '會員', '付款狀態', '商品金額', '使用紅利', '訂單金額']];

            rows.forEach(function (row) {
                // Check if the row contains a collapse element
                var collapseElement = row.querySelector('.collapse');
                if (collapseElement === null || collapseElement.classList.contains('show')) {
                    var rowData = [];
                    var cells = row.getElementsByTagName('td');

                    //
                    var cellCount = cells.length;
                    if (cellCount >= 10) {
                        for (var i = 1; i < 10; i++) { // 從第2列到第10列
                            var cellContent = cells[i].textContent;
                            rowData.push(cellContent ? cellContent.trim() : '');
                        }
                        data.push(rowData);
                    }
                }
            });

            // 設定當前字串時間
            var currentDate = new Date();

            // 設定台灣時間
            currentDate.setUTCHours(currentDate.getUTCHours() + 8);

            var dateTimeString = currentDate.toISOString().replace(/[-T:.Z]/g, '').substring(0, 14);


            var fileName = '訂單列表_' + dateTimeString + '.xlsx';

            var wb = XLSX.utils.book_new();
            var ws = XLSX.utils.aoa_to_sheet(data);


            // 調整欄寬
            var wscols = [
                { wch: 15 },
                { wch: 15 },
                { wch: 20 },
                { wch: 20 },
                { wch: 15 },
                { wch: 15 },
                { wch: 15 }
            ];

            ws['!cols'] = wscols;

            XLSX.utils.book_append_sheet(wb, ws, 'Orders');
            XLSX.writeFile(wb, fileName);
        });

    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.2/xlsx.full.min.js"></script>

    }