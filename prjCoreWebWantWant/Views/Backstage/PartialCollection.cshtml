                                                        @*<a href="@Url.Content("~/BackStage/Apply")?id=@item.CaseId" class="btn btn-outline-success">應徵</a>*@
                                                    </div>
                                                </th>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <!-- end table-->
                            @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
