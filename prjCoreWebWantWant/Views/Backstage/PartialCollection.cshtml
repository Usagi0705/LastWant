                                <thead>
                                    <tr>
                                        <th scope="col" style="width:30px">
                                            <div class="form-check font-size-16" style="width: 30px; text-align: center">序號</div>
                                        </th>
                                        <th scope="col" style="width: 30px; text-align: center">任務名稱</th>
