</div>

@section Styles{
        
    <link type="text/css" rel="stylesheet" href="~/Expert/css/expertstyle.css">
        }
@section Scripts{
    <script src="~/Expert/js/expert.js"></script>
    <script src="~/Expert/js/bootstrap.bundle.js"></script>
    <script src="~/Expert/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
            <script>

                //星星評價
                 let score=0 ;
                fetch(`@Url.Content("~/ExpertResumes/StarRating")`)
                    .then(response => response.json())
                    .then(data => {
                        const datadiv = "";
                        data.forEach(item => {
                            datadiv = ` <p class="lead pt-3">${item.評論}</p>`
                            score += item.分數;
                        });


                        document.querySelector("#ratinghere").innerHTML = datadiv;
                    });
                        
                let arr= [ ];
                for(let i=1;i<=5;i++){
            if (score >= i) {
                arr.push("🌕"); // 實心星星
            } else if (score > i - 1 && score < i) {
                arr.push("🌗"); // 半實心星星
            } else {
                arr.push("🌑"); // 空心星星
            }
                }
        document.querySelector("#star").innerHTML = `專家評分為${score}: ` + arr.join("");
             





                //圖片-作品集還沒好
        const btonworks = document.getElementById("btnworks");
        const works = document.querySelector("#works");
        const details = document.querySelector("#details");

        btonworks.addEventListener("click",()=>{
            console.log("1");

            if (works.style.display == "none" ) {
                works.style.display = "block";
                details.style.display = "none";
                var a=worksdiplay();
             
            } else {
                works.style.display = "none";
                details.style.display = "none";
              
            }
        });
      
        function worksdiplay(){
            fetch(`@Url.Content("~/ExpertResumes/WorksImage")`)
                .then(response => response.json())
                .then(datas => {
                    const imgarr =[ ];
                 
                   
                            for (let i = 0; i < datas.length; i++){
                                const img=new Image();
                                img.src = `data:image/jpeg;base64,${datas[i].base64Content}`;
                       
                                img.classList.add("img-fluid");
                                
                                 imgarr.push(img);
                                }

                    return imgarr;
            });
                
                };

          

    </script>
        }