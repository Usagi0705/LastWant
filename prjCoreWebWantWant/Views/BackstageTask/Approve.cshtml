                                           <!--選擇任務類型  未處理的標籤-->
                                              <div class="col-4 mb-3" id="selAll">
                                                <form class="app-search d-none d-lg-block">
                                                    @{
                                                        NewIspanProjectContext _context1 = new NewIspanProjectContext();
                                                        var q = from p in _context1.TaskNameLists
                                                                select p.TaskName;
                                                    }

                                                    <select class="form-select" id="selTaskNameAll">
                                                        <option value="">請選擇任務類型</option>
                                                        @foreach (var item in q)
                                                        {
                                                            <option name="category">@item</option>
                                                        }
                                                    </select>
                                                </form>
                                            </div>

                                        <!--選擇任務類型  已錄取的標籤-->
                                              <div class="col-4 mb-3" id="selAccept"  style="display:none">
                                                <form class="app-search d-none d-lg-block">
                                                    @{
                                                        NewIspanProjectContext _context2 = new NewIspanProjectContext();
                                                        var q2 = from p in _context2.TaskNameLists
                                                                select p.TaskName;
                                                    }

                                                    <select class="form-select" id="selTaskNameAccept">
                                                        <option value="">請選擇任務類型</option>
                                                        @foreach (var item in q2)
                                                        {
                                                            <option name="category">@item</option>
                                                        }
                                                    </select>
                                                </form>
                                            </div>

                                             <!--選擇任務類型  已婉拒的標籤-->
                                              <div class="col-4 mb-3" id="selRefuse" style="display:none">
