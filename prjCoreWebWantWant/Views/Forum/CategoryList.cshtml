@model IEnumerable<prjCoreWebWantWant.Models.ForumCategory>

@{
    ViewData["Title"] = "討論區";
}
@section subTitle{

}


<div class="m-auto container">
    <h2 class="text-center mt-5 myh2" style="font-weight:bold">
        <span style="color:#9eb9d3">●</span>
        <span style="color:#c0d3e6">●</span>
        <span style="color:#e5edf6">●</span>
        WantWant討論版
        <span style="color:#e5edf6">●</span>
        <span style="color:#c0d3e6">●</span>
        <span style="color:#9eb9d3">●</span>
    </h2>

    <div class="m-auto mt-5 flex-wrap d-inline-flex gap-4 justify-content-center mb-5">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("PostList", "Forum", new { categoryId = item.CategoryId})" class="link-underline link-underline-opacity-0">
                <div class="mx-3 col-3  rounded-4 bg-white shadow ca-card position-relative" style="width:380px;min-height:200px">
                    <div class="">
                        <div class="rounded-4 text-center pt-3" style="width:380px;min-height:200px">
                             <div class="h4 fw-bold text-dark-emphasis link-underline link-underline-opacity-0">@Html.DisplayFor(modelItem => item.Title)</div>
                             <hr class="my-2 myhr" style="height:1px">
                             <div class="card-fontcolor px-4 rounded-bottom-3 link-underline link-underline-opacity-0" style="font-size:16px">@Html.DisplayFor(modelItem => item.Depiction)</div>
                            <div class="small card-fontcolor  position-absolute bottom-0 end-0 p-3">
                                目前文章數：
                                <span class="text-danger h5 text-opacity-50">@item.ForumPostCategories.Where(p=>(p.Post.Status==1||p.Post.Status==4)&&p.Post.ParentId==null).Count()</span>
                            </div>
                         </div>
                     </div>
                </div>
            </a>
        }
    </div>
</div>


@section Styles{
    <style>
        .myhr {
            border: 0;
            height: 1px;
            background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
        }

        .shadow {
            box-shadow: rgba(0, 0, 0, 0.1) -4px 9px 25px -6px;
        }

        .border {
            border-color: #e9e9ef;
        }

        .ca-card{
            background-image: url('/images/borderbg.png');
            background-color: #fafdff;
            border:1px dotted #eee;
            border-collapse: separate; /* 使用分離的邊框排列 */
            border-spacing: 5px; /* 設定邊框間的間距 */

        }

        .myh2{
            font-family: 'Noto Sans TC', sans-serif;
        }

        .card-fontcolor{
            color: #757575;
        }




    </style>
}